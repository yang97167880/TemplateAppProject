<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/item_createTime"
        style="@style/TextStyle.Explain"
        android:layout_gravity="start"
        android:layout_marginLeft="@dimen/config_margin_16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="创建时间：2021-03-04 12:00:00" />

    <androidx.cardview.widget.CardView
        android:id="@+id/product_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/xui_config_color_white"
        app:cardPreventCornerOverlap="true"
        app:contentPaddingBottom="18dp"
        app:contentPaddingLeft="16dp"
        app:contentPaddingRight="16dp"
        app:contentPaddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <com.xuexiang.xui.widget.imageview.RadiusImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:riv_is_circle="true"
                        app:srcCompat="@drawable/ic_product" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_Coding"
                            style="@style/TextStyle.Explain"
                            android:layout_gravity="start|top"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:textColor="@color/xui_config_color_pure_black"
                            android:textSize="@dimen/config_margin_12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/product_from"
                                style="@style/TextStyle.Explain"
                                android:layout_gravity="bottom"
                                android:layout_marginStart="4dp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="厦门中医院 | 门诊部"
                                android:textSize="@dimen/config_margin_12dp" />


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/expand_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/config_margin_8dp"
                    android:paddingBottom="@dimen/config_margin_8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_weight"
                            style="@style/TextStyle.Content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="start|center_vertical"
                            android:maxLines="2"
                            android:singleLine="false"
                            android:textColor="@color/xui_config_color_pure_black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/item_package"
                            style="@style/TextStyle.Explain"
                            android:layout_weight="1"
                            android:textColor="@color/xui_config_color_pure_black" />

                        <TextView
                            android:id="@+id/item_pollution"
                            style="@style/TextStyle.Explain"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textColor="@color/xui_config_color_pure_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/config_margin_8dp">

                        <TextView
                            android:id="@+id/item_1"
                            style="@style/TextStyle.Explain"
                            android:gravity="start"
                            android:text="创建人："
                            android:textColor="@color/xui_config_color_pure_black" />

                        <TextView
                            android:id="@+id/item_create"
                            style="@style/TextStyle.Explain"
                            android:layout_weight="1"
                            android:gravity="start" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/config_margin_5dp"
                        android:paddingBottom="@dimen/config_margin_5dp">

                        <TextView
                            android:id="@+id/item_2"
                            style="@style/TextStyle.Explain"
                            android:gravity="start"
                            android:text="最近流转时间："
                            android:textColor="@color/xui_config_color_pure_black" />

                        <TextView
                            android:id="@+id/item_updateTime"
                            style="@style/TextStyle.Explain"
                            android:layout_weight="1"
                            android:gravity="start" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/config_margin_5dp">

                        <TextView
                            android:id="@+id/item_3"
                            style="@style/TextStyle.Explain"
                            android:gravity="start"
                            android:text="操作者："
                            android:textColor="@color/xui_config_color_pure_black" />

                        <TextView
                            android:id="@+id/item_updateName"
                            style="@style/TextStyle.Explain"
                            android:layout_weight="1"
                            android:gravity="start" />

                        <TextView
                            android:id="@+id/item_infor"
                            style="@style/TextStyle.Explain"
                            android:gravity="end"
                            android:text="查看流转信息"
                            android:textColor="@color/xui_config_color_waring" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_4"
                            style="@style/TextStyle.Explain"
                            android:gravity="start"
                            android:text="物品类型："
                            android:textColor="@color/xui_config_color_pure_black" />

                        <TextView
                            android:id="@+id/product_name"
                            style="@style/TextStyle.Explain"
                            android:layout_weight="1"
                            android:gravity="start" />
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>