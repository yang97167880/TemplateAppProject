<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/xui_config_color_white"
    app:cardPreventCornerOverlap="true"
    app:contentPaddingBottom="10dp"
    app:contentPaddingLeft="16dp"
    app:contentPaddingRight="16dp"
    app:contentPaddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.xuexiang.xui.widget.imageview.RadiusImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@drawable/ic_product"
                    app:riv_is_circle="true" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/product_name"
                    style="@style/TextStyle.Explain"
                    android:textSize="@dimen/config_margin_18dp"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/xui_config_color_pure_black" />

                <TextView
                    android:id="@+id/product_from"
                    style="@style/TextStyle.Explain"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/config_margin_5dp"
                    android:layout_marginStart="4dp"
                    android:textSize="@dimen/config_margin_12dp" />

            </LinearLayout>
                <TextView
                    android:id="@+id/item_weight"
                    style="@style/TextStyle.Content"
                    android:textSize="@dimen/config_margin_16dp"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:layout_gravity="center_vertical"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:textColor="@color/xui_config_color_pure_black" />
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_package"
                    style="@style/TextStyle.Content"
                    android:textSize="14dp"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp"
                    android:gravity="start|center_vertical"
                    android:maxLines="2"
                    android:singleLine="false"

                    android:textColor="@color/xui_config_color_pure_black" />

                <TextView
                    android:id="@+id/item_create"
                    style="@style/TextStyle.Explain"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/xui_config_color_pure_black"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/item_pollution"
                style="@style/TextStyle.Content"
                android:textSize="14dp"
                android:ellipsize="end"
                android:layout_gravity="top"
                android:maxLines="2"
                android:singleLine="false"

                android:textColor="@color/xui_config_color_pure_black" />

        </LinearLayout>
        <TextView
            android:id="@+id/item_createTime"
            style="@style/TextStyle.Explain"
            android:layout_marginTop="3dp"
            android:textColor="@color/xui_config_color_pure_black"
             />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/item_Coding"
                    style="@style/TextStyle.Explain"
                    android:layout_gravity="center_vertical|end"
                    />

            </LinearLayout>


        </FrameLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>