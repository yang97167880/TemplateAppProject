<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notices_view_item"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:cardBackgroundColor="@color/xui_config_color_white"
    app:contentPaddingBottom="5dp"
    app:contentPaddingLeft="16dp"
    app:contentPaddingRight="16dp"
    app:contentPaddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:id="@+id/user_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/xui_ic_default_img"
            app:riv_border_width="0dp"
            app:riv_corner_radius="30dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:layout_marginStart="@dimen/config_margin_10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/config_margin_5dp"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:text="CIE17094"
                />

            <TextView
                android:id="@+id/tv_new_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/config_margin_5dp"
                android:textSize="13dp"
                android:text="在吗？"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_new_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/config_margin_5dp"
                android:layout_gravity="end"
                android:textSize="@dimen/config_margin_10dp"
                android:text="21-05-31"
                />

            <TextView
                android:id="@+id/tv_unread_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_circle_unread_count"
                android:layout_marginTop="@dimen/config_margin_10dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="1"
                android:visibility="visible"
                />

        </LinearLayout>



    </LinearLayout>



</androidx.cardview.widget.CardView>


