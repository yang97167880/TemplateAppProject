<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/scan_card"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginStart="@dimen/config_margin_8dp"
            android:layout_marginTop="@dimen/config_margin_10dp"
            android:layout_marginBottom="@dimen/config_margin_18dp"
            android:padding="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"

            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_scan" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/config_margin_5dp"
                android:layout_marginBottom="@dimen/config_margin_8dp"
                android:gravity="center"
                android:text="点我扫一下"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/config_margin_20dp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_step1" />
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_step2" />
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_step3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择物品"
                    android:textSize="@dimen/config_margin_12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫码接收"
                    android:textSize="@dimen/config_margin_12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接收成功"
                    android:textSize="@dimen/config_margin_12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>