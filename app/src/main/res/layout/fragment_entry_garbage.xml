<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/config_margin_10dp"
        android:layout_marginBottom="@dimen/config_margin_10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/config_margin_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重量："
            android:textSize="@dimen/config_margin_18dp" />

        <TextView
            android:id="@+id/garbage_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/config_margin_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="垃圾类型："
            android:textSize="@dimen/config_margin_18dp" />

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_type"
            style="@style/Button.Primary.wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableEnd="@drawable/ic_next"
            android:text="请选择垃圾类型"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/config_margin_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包装类型："
            android:textSize="@dimen/config_margin_18dp" />

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_package"
            style="@style/Button.Primary.wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableEnd="@drawable/ic_next"
            android:text="请选择包装类型"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/config_margin_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="污染级别："
            android:textSize="@dimen/config_margin_18dp" />

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_pollution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableEnd="@drawable/ic_next"
            android:text="请选择污染级别"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <com.xuexiang.xui.widget.button.ButtonView
                android:id="@+id/uploadData"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="开始上传"
                android:textColor="@color/white" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>