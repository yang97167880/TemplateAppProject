<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:navigationIcon="@drawable/ic_web_back"
            app:titleTextColor="@color/xui_config_color_white" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/config_margin_10dp"
        android:layout_marginBottom="@dimen/config_margin_10dp"
        android:padding="@dimen/config_margin_10dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重量："
            android:textSize="@dimen/config_margin_18dp"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/config_margin_10dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="垃圾类型："
            android:textSize="@dimen/config_margin_18dp"
            />
        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_type"
            style="@style/Button.Primary.wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/colorAccent"
            android:drawableEnd="@drawable/ic_next"
            android:text="请选择垃圾类型"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/config_margin_10dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包装类型："
            android:textSize="@dimen/config_margin_18dp"
            />
        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_package"
            style="@style/Button.Primary.wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/colorAccent"
            android:drawableEnd="@drawable/ic_next"
            android:text="请选择包装类型"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/config_margin_10dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="污染级别："
            android:textSize="@dimen/config_margin_18dp"
            />
        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_pollution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/colorAccent"
            android:drawableEnd="@drawable/ic_next"
            android:text="请选择污染级别"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="bottom">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">
    <com.xuexiang.xui.widget.button.ButtonView
        android:id="@+id/match_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="开始上传"
        android:textColor="@color/white" />
    </FrameLayout>
</LinearLayout>
</LinearLayout>