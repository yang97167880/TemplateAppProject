<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_circulation_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/xui_config_color_white"
   >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

           >
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:layout_marginStart="@dimen/config_margin_8dp"
                android:text="2019-10-9 12:34"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/logo"
                    android:layout_height="80dp"
                    android:layout_width="30dp"
                    android:layout_marginTop="@dimen/config_margin_8dp"
                    android:src="@drawable/ico_logistics_line"/>
                <com.xuexiang.xui.widget.imageview.RadiusImageView
                    android:id="@+id/member_avatar"
                    android:layout_width="@dimen/config_margin_30dp"
                    android:layout_height="@dimen/config_margin_30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/xui_ic_default_img"
                    app:riv_border_width="0dp"
                    app:riv_corner_radius="30dp" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/config_margin_10dp"
                android:paddingTop="@dimen/config_margin_7dp"
                android:paddingStart="@dimen/config_margin_10dp">

                <TextView
                    android:id="@+id/member_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:textColor="@color/black"
                    android:text="super"
                    android:textSize="@dimen/config_margin_15dp" />

                <TextView
                    android:id="@+id/tv_operator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/config_margin_20dp"
                    android:textColor="@color/xui_btn_green_normal_color"
                    android:text="存入"
                    />

            </RelativeLayout>




       </LinearLayout>

</androidx.cardview.widget.CardView>