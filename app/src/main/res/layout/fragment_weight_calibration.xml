<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:textSize="@dimen/config_margin_20dp"
         android:layout_marginTop="85dp"
         android:text="请将手持设备空载"
         android:textColor="@color/black"/>

    <ImageView
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:background="@drawable/ic_weight_calibration"/>

    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
        android:id="@+id/btn_start_check_weight"
        style="@style/SuperButton.Primary.ProductItemCirculation"
        android:textSize="@dimen/config_margin_12dp"
        android:layout_width="match_parent"
        android:layout_marginTop="95dp"
        android:layout_marginHorizontal="@dimen/config_margin_50dp"
        android:text="@string/btn_start_check_weight"
        />

    <TextView
        android:id="@+id/tv_get_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="数据接收"
        android:layout_marginTop="@dimen/config_margin_30dp"
        android:textColor="@color/black"
        android:textSize="@dimen/config_margin_30dp"/>
</LinearLayout>