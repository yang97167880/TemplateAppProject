<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/config_margin_10dp"
    android:layout_marginTop="@dimen/config_margin_10dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/transit_box_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/xui_config_color_white"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/config_margin_10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/config_margin_16dp"
                android:layout_marginTop="@dimen/config_margin_16dp"
                android:layout_marginBottom="@dimen/config_margin_12dp"
                >

                <TextView
                    android:id="@+id/tv_transit_box_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="病理性废物转运箱"
                    android:textColor="@color/xui_config_color_pure_black"
                    android:textSize="@dimen/config_margin_20dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tv_transit_box_current_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="12453"
                        android:textColor="@color/xui_config_color_pure_black"
                        android:textSize="@dimen/config_margin_14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/config_margin_5dp"
                        android:text="g"
                        android:textColor="@color/xui_config_color_pure_black"
                        android:textSize="@dimen/config_margin_14dp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                >


                <com.xuexiang.xui.widget.progress.HorizontalProgressView
                    android:id="@+id/horizontal_progress_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:hpv_end_progress="100"
                    app:hpv_start_color="@color/green"
                    app:hpv_end_color="@color/green"
                    app:hpv_progress_textVisibility="false"
                    app:hpv_track_width="13dp"
                    />

                <TextView
                    android:id="@+id/tv_weight_ratio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:text="0.0061%"
                    android:textColor="@color/black"
                    android:textSize="@dimen/config_margin_10dp" />
            </RelativeLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>