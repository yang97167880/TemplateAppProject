<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <View
                    android:id="@+id/bg"
                    android:layout_width="280dp"
                    android:layout_height="380dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="@dimen/config_margin_30dp"
                    android:background="@drawable/background_rounded_rectangle" />

                <com.xuexiang.xui.widget.imageview.RadiusImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignTop="@+id/bg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-40dp"
                    app:riv_is_circle="true"
                    app:srcCompat="@drawable/ic_product" />

                <TextView
                    android:id="@+id/tv_user_name"
                    style="@style/TextStyle.Title"
                    android:textSize="@dimen/config_margin_24dp"
                    android:layout_above="@+id/iv_user_qrcode"
                    android:layout_marginBottom="@dimen/config_margin_20dp"
                    android:layout_centerHorizontal="true"
                    android:text="Joyste"
                    />

                <TextView
                    android:id="@+id/txt"
                    style="@style/TextStyle"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBottom="@+id/bg"
                    android:layout_marginBottom="10dp"
                    android:text="@string/user_qrcode_ins" />


                <ImageView
                    android:id="@+id/iv_user_qrcode"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_above="@+id/txt"
                    android:layout_centerHorizontal="true"
                    />


            </RelativeLayout>


</LinearLayout>