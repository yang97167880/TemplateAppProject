<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sheet_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="@dimen/config_margin_5dp"
        android:paddingBottom="@dimen/config_margin_12dp"
        android:paddingStart="@dimen/config_margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
          android:id="@+id/or_avatar_1"
            android:layout_marginRight="@dimen/config_margin_8dp"
            android:src="@drawable/icon_avatar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/or_title"
                style="@style/TextStyle.Explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="厦门中医院"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/or_subtitle"
                style="@style/TextStyle.Explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="甲级三级" />
        </LinearLayout>

        <TextView
            android:id="@+id/or_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/config_margin_5dp"
            android:text="当前机构"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/or_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableEnd="@drawable/ic_change_1" />
    </LinearLayout>
</LinearLayout>