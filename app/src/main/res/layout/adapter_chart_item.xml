<com.xuexiang.xui.widget.alpha.XUIAlphaLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="15dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:id="@+id/left_chart"
        android:visibility="gone"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/config_margin_32dp"
        tools:ignore="RtlHardcoded,UseCompoundDrawables">
        <ImageView
            android:id="@+id/avatar_popup_left"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@string/avatar" />

        <TextView
            android:id="@+id/avatar_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/config_margin_8dp"
            android:background="@drawable/chart_left"
            android:paddingLeft="20dp"
            android:paddingTop="7dp"
            android:paddingRight="18dp"
            android:paddingBottom="7dp"
            android:textColor="#fff"
            android:textSize="@dimen/config_margin_16dp"
            tools:ignore="SpUsage" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/right_chart"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/config_margin_32dp"
        tools:ignore="RtlHardcoded,UseCompoundDrawables">
        <TextView
            android:id="@+id/avatar_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/config_margin_43dp"
            android:background="@drawable/chart_right"
            android:paddingLeft="18dp"
            android:paddingTop="7dp"
            android:paddingRight="18dp"
            android:paddingBottom="7dp"
            android:textColor="#000"
            android:textSize="@dimen/config_margin_15dp"
            android:layout_alignParentRight="true"
            tools:ignore="SpUsage" />
        <ImageView
            android:id="@+id/avatar_popup_right"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            tools:src="@drawable/icon_avatar"
            android:contentDescription="@string/avatar" />
    </RelativeLayout>




</com.xuexiang.xui.widget.alpha.XUIAlphaLinearLayout>