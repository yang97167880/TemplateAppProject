<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/xui_config_color_white"
        app:cardPreventCornerOverlap="true"
        app:contentPaddingBottom="10dp"
        app:contentPaddingLeft="16dp"
        app:contentPaddingRight="16dp"
        app:contentPaddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/config_margin_24dp"
                android:layout_marginBottom="@dimen/config_margin_18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.xuexiang.xui.widget.imageview.RadiusImageView
                    android:id="@+id/or_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/xui_ic_default_img"
                    app:riv_border_width="0dp"
                    app:riv_corner_radius="5dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/config_margin_18dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/or_name"
                        style="@style/TextStyle.Content"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:text="厦门中医院"
                        android:textColor="@color/xui_config_color_pure_black" />
                   <ImageView
                       android:layout_marginTop="5dp"
                       android:layout_width="16dp"
                       android:layout_height="16dp"
                       android:layout_marginLeft="@dimen/config_margin_8dp"
                       app:srcCompat="@drawable/ic_menu_organization"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/or_city"
                        style="@style/TextStyle.Explain"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:text="城市：浙江 杭州"
                        android:textColor="?attr/xui_config_color_content_text" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/or_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/config_margin_12dp"
        android:layout_marginBottom="@dimen/config_margin_12dp"
        android:textSize="16dp"
        android:paddingLeft="@dimen/config_margin_20dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:text="编号：XMZY001"/>

    <TextView
        android:id="@+id/or_typeName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:paddingLeft="@dimen/config_margin_20dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:text="机构类型：医院"/>
    <TextView
        android:id="@+id/or_level"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:textSize="16dp"
        android:paddingLeft="@dimen/config_margin_20dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:text="机构等级：甲级三级"/>
    <Button
        android:id="@+id/btn_apply_or"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/config_margin_32dp"
        android:textSize="16dp"
        android:paddingLeft="@dimen/config_margin_20dp"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="申请加入"/>
</LinearLayout>