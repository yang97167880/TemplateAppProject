<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Context.getFilesDir() 位于/data/data/安装目录-->
    <files-path
        name="internalPath"
        path="file" />
    <!--Context.getCacheDir()-->
    <cache-path
        name="cachePath"
        path="file" />
    <!--Environment.getExternalStorageDirectory()-->
    <external-path
        name="externalPath"
        path="file" />
    <!--Context.getExternalFilesDir(null)-->
    <external-files-path
        name="externalFPath"
        path="file" />
    <!-- 注意包名 -->
    <external-path
        path="."
        name="files_root" />

</paths>
